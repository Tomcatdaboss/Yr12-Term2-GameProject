using System.Collections.Generic;
[System.Serializable]
// this is a class containing the 'state' of the game - all the important variables used to define the player's context and progression. It is used to store data in the save file.
public class PlayerData
{
    public float [] player_position;
    public int tut_step;
    public float healthperc;
    public float stamina;
    public float thirst;
    public float hunger;
    public float level;
    public int maxHp;
    public int maxXp;
    public int maxHT;
    public int maxDmg;
    public float xp;
    public string current_equip;
    public float enemy_health_1;
    public float [] enemy_position_1;
    public float enemy_health_2; 
    public float [] enemy_position_2;
    public float enemy_health_3;
    public float [] enemy_position_3;
    public float enemy_health_4;
    public float [] enemy_position_4;
    public float enemy_health_5;
    public float [] enemy_position_5;
    public float enemy_health_6;
    public float [] enemy_position_6;
    public List<string> slot_name_list = new List<string>();
    public List<int> slot_quantity_list = new List<int>();
    public List<float> recorded_construct_coords = new List<float>();
    public List<string> recorded_construct_tags = new List<string>();
}
