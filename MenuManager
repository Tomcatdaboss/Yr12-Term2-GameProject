using System.Collections;
using System.Collections.Generic;
using System.Runtime.CompilerServices;
using UnityEngine;
using UnityEngine.UI;

public class MenuManager : MonoBehaviour
{
    public GameObject XP_slider_obj;
    public GameObject HP_slider_obj;
    public GameObject unassigned_slider_obj;
    public GameObject unassigned_slider1_obj;
    public GameObject player;
    public GameObject savemanager;
    public GameObject shownui;
    public Camera menu_cam;
    public Camera main_cam;
    // Start is called before the first frame update
    void Start()
    {
    }
    public void OnSettingsChange(){
        player.GetComponent<Hud>().maxXP = XP_slider_obj.GetComponent<Slider>().value;
        player.GetComponent<Hud>().maxHealth = HP_slider_obj.GetComponent<Slider>().value;
        //player.GetComponent<Hud>().maxHealth = XP_slider_obj.GetComponent<Slider>().value * MaximumXP;
        //player.GetComponent<Hud>().maxHealth = XP_slider_obj.GetComponent<Slider>().value * MaximumXP;
    }
    public void StartFunc(){ // reset all inventory contents and return player to spawn, typically in the process of death.
        savemanager.GetComponent<PlayerDataManager>().LoadGame();
        player.GetComponent<Hud>().menu_sprite.SetActive(false);
        shownui.SetActive(true);
        menu_cam.enabled = false;
        main_cam.enabled = true;
    }
    public void StartMenuFunc(){ // turns menu on
        player.GetComponent<Hud>().start_sprite.SetActive(false);
        player.GetComponent<Hud>().menu_sprite.SetActive(true);
        menu_cam.enabled = true;
        main_cam.enabled = false;
        shownui.SetActive(false);
    }
    public void QuitGame() {
        Application.Quit();
    }
}
